@model AccentDesignTest.Models.Home.IndexViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<div >
    <h1 class="display-4">List of Properties</h1>
    <ul  class="list-group">
        @foreach (var p in Model.Properties)
        {
            <li class="list-group-item">
              <div class="alert alert-primary">
                  <span class="index_titles">Propert Address: </span>
                  <span>
                      @p.address.houseNumber 
                      - @p.address.address1 
                      - @p.address.locality
                      - @p.address.town
                      - @p.address.county
                      - @p.address.postcode
                  </span>
              </div>
              <div class="alert alert-secondary">
                  <span class="index_titles">Board Type: </span>
                  <span>
                      @p.erectedBoardType.title 
                  </span>
              </div>
              <div class="alert alert-success">
                  <span class="index_titles">Total Fee Charged: </span>
                  <span>
                      @p.totalFeeChargedCalculated
                  </span>
              </div>
            </li>
        }
        <li  class="list-group-item">
            <span class="index_titles">grand total: </span>
            <span>
                @Model.GrandTotal
            </span>
        </li>        
    </ul>
</div>
